<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>throttles.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>base</object-name>
    <object-name>Throttle</object-name>
    <object-name>Mixture</object-name>
    <object-name>PropCont</object-name>

    <!-- Objets transparents -->
  </animation>

  <!--  Throttle pick animation -->
  <animation>
    <type>pick</type>
    <object-name>Throttle</object-name>
    <visible>true</visible>
    <action>
      <button>3</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/throttle</property>
        <step> 0.01 </step>
        <min> 0 </min>
        <max> 1 </max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/throttle</property>
        <step> -0.01 </step>
        <min> 0 </min>
        <max> 1 </max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Throttle</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor> -0.07 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!--  Mixture pick animation -->
  <animation>
    <type>pick</type>
    <object-name>Mixture</object-name>
    <visible>true</visible>
    <action>
      <button>3</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/mixture</property>
        <step> 0.01 </step>
        <min> 0 </min>
        <max> 1 </max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/mixture</property>
        <step> -0.01 </step>
        <min> 0 </min>
        <max> 1 </max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Mixture</object-name>
    <property>controls/engines/engine[0]/mixture</property>
    <factor> -0.07 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!--  Prop Control pick animation -->
  <animation>
    <type>pick</type>
    <object-name>PropCont</object-name>
    <visible>true</visible>
    <action>
      <button>3</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/propeller-pitch</property>
        <step> 0.01 </step>
        <min> 0 </min>
        <max> 1 </max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/engines/engine[0]/propeller-pitch</property>
        <step> -0.01 </step>
        <min> 0 </min>
        <max> 1 </max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>PropCont</object-name>
    <property>controls/engines/engine[0]/propeller-pitch</property>
    <factor> -0.07 </factor>
    <axis>
      <x> 1</x>
      <y> 0</y>
      <z> 0</z>
    </axis>
  </animation>

</PropertyList>
