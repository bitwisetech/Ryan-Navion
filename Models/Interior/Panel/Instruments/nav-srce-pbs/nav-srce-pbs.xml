<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- KI-229 RMI -->
<PropertyList>

  <path>nav-srce-pbs.ac</path>

  <animation>
    <object-name>switchbox</object-name>
    <object-name>NAV1BUTT</object-name>
    <object-name>NAV2BUTT</object-name>
    <object-name>GPSBUTT</object-name>
    <object-name>NAV1on</object-name>
    <object-name>NAV2on</object-name>
    <object-name>GPSon</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>switchbox</object-name>
    <object-name>NAV1BUTT</object-name>
    <object-name>NAV2BUTT</object-name>
    <object-name>GPSBUTT</object-name>
    <object-name>NAV1on</object-name>
    <object-name>NAV2on</object-name>
    <object-name>GPSon</object-name>
  </animation>

  <!-- working for Compositor -->
  <effect>
    <inherits-from>../../../../Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>NAV1BUTT</object-name>
    <object-name>NAV2BUTT</object-name>
    <object-name>GPSBUTT</object-name>
    <object-name>NAV1on</object-name>
    <object-name>NAV2on</object-name>
    <object-name>GPSon</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>NAV1on</object-name>
    <condition>
      <equals>
        <property>instrumentation/nav-source/selector</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>NAV2on</object-name>
    <condition>
      <equals>
        <property>instrumentation/nav-source/selector</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>GPSon</object-name>
    <condition>
      <equals>
        <property>instrumentation/nav-source/selector</property>
        <value>2</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>NAV1BUTT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <!-- NAV1 Selected-->
        <property>instrumentation/nav-source/selector</property>
        <value type="bool">0</value>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>NAV2BUTT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <!-- NAV2 Selected -->
        <property>instrumentation/nav-source/selector</property>
        <value type="bool">1</value>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>GPSBUTT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <!-- GPS Selected -->
        <property>instrumentation/nav-source/selector</property>
        <value type="bool">2</value>
      </binding>
    </action>
  </animation>

</PropertyList>
