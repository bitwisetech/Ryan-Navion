<PropertyList>

  <path>primer.ac</path>

  <animation>
    <object-name>PrimeFace</object-name>
    <object-name>base</object-name>
    <object-name>info</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>PrimeFace</object-name>
    <object-name>base</object-name>
    <condition>
      <property>controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>PrimeFace</object-name>
    <property>controls/engines/engine/primer-pump</property>
    <factor> -0.035 </factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>PrimeFace</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>navion.primer()</script>
      </binding>
    </action>
  </animation>

</PropertyList>
