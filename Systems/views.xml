<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <chase-distance-m type="double">-15</chase-distance-m>

  <view n="0">
    <name>Captain</name>
    <type>lookfrom</type>
    <internal type="bool">true</internal>
    <config>
      <x-offset-m archive="y"> -0.313 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  0.497 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -1.596 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg type="double"> -10 </pitch-offset-deg>
      <default-field-of-view-deg type="double">90</default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
      <limits>
        <enabled type="bool">true</enabled>
        <left>
          <heading-max-deg type="double">150</heading-max-deg>
          <x-offset-max-m type="double">0.10</x-offset-max-m>
          <x-offset-threshold-deg type="double">60</x-offset-threshold-deg>
        </left>
        <right>
          <heading-max-deg type="double">150</heading-max-deg>
          <x-offset-max-m type="double">0.10</x-offset-max-m>
          <x-offset-threshold-deg type="double">60</x-offset-threshold-deg>
        </right>
      </limits>
    </config>
  </view>

  <view n="100">
    <name>Right Passanger Seat View</name>
    <internal>true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <x-offset-m archive="y">  0.313 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  0.497 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -1.596 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg type="double">-10</pitch-offset-deg>
      <default-field-of-view-deg type="double">90</default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
      <limits>
        <enabled type="bool">true</enabled>
        <left>
          <heading-max-deg type="double">150</heading-max-deg>
          <x-offset-max-m type="double">0.10</x-offset-max-m>
          <x-offset-threshold-deg type="double">60</x-offset-threshold-deg>
        </left>
        <right>
          <heading-max-deg type="double">150</heading-max-deg>
          <x-offset-max-m type="double">0.10</x-offset-max-m>
          <x-offset-threshold-deg type="double">60</x-offset-threshold-deg>
        </right>
      </limits>
    </config>
  </view>
  
  <view n="101">
    <name>Rear Passanger Seat View</name>
    <internal>true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <x-offset-m>  0.300 </x-offset-m> <!-- Right -->
      <y-offset-m>  0.500 </y-offset-m> <!-- Up    -->
      <z-offset-m> -0.900 </z-offset-m> <!-- Back  -->
      <pitch-offset-deg type="double">-5</pitch-offset-deg>
      <default-field-of-view-deg type="double">70</default-field-of-view-deg>
      <dynamic-view type="bool">true</dynamic-view>
      <limits>
        <enabled type="bool">true</enabled>
        <left>
          <heading-max-deg type="double">150</heading-max-deg>
          <x-offset-max-m type="double">0.10</x-offset-max-m>
          <x-offset-threshold-deg type="double">60</x-offset-threshold-deg>
        </left>
        <right>
          <heading-max-deg type="double">150</heading-max-deg>
          <x-offset-max-m type="double">0.10</x-offset-max-m>
          <x-offset-threshold-deg type="double">60</x-offset-threshold-deg>
        </right>
      </limits>
    </config>
  </view>
  
  <view n="102">
    <name>Tail Camera View</name>
    <type>lookfrom</type>
    <internal>true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y"> 0.000 </x-offset-m> <!--Right-->
      <y-offset-m archive="y"> 1.066 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> 2.700 </z-offset-m> <!--Back-->
      <pitch-offset-deg type="double">-5</pitch-offset-deg>
      <default-field-of-view-deg type="double">30</default-field-of-view-deg>
      <dynamic-view type="bool">false</dynamic-view>
    </config>
  </view>
  
  <view n="1">
    <config>
      <target-z-offset-m type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="2">
    <config>
      <target-z-offset-m type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="3">
    <config>
      <target-z-offset-m type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="4">
    <config>
      <target-z-offset-m type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="5">
    <config>
      <target-z-offset-m type="double">0</target-z-offset-m>
    </config>
  </view>

  <view n="6">
    <config>
      <target-z-offset-m type="double">0</target-z-offset-m>
    </config>
  </view>

</PropertyList>
